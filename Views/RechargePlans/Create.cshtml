@model mobile_recharger.Models.RechargePlan

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-control {
        -webkit-box-shadow: none !important;
        outline: -webkit-focus-ring-color auto 0px !important;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>


<h4>Add a RechargePlan</h4>
<hr />
<div class="row flex-column align-items-center">
    <div class="col-md-4 bg-secondary rounded">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label text-white">Price</label>
                <input asp-for="Price" class="form-control border-0 border-bottom mt-1" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Validity" class="control-label text-white">Validity</label>
                <input asp-for="Validity" class="form-control border-0 border-bottom mt-1" />
                <span asp-validation-for="Validity" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CategoryId" class="control-label text-white">Category</label>
                <select asp-for="CategoryId" class ="form-control mt-1" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group mt-4 mb-4">
                <input type="submit" value="Create" class="btn btn-primary border-white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="mt-2  btn-primary rounded text-white text-decoration-none mt-2 p-2 ">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
